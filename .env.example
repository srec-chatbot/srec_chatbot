# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/srec_connect
# Alternative for MongoDB (if using MongoDB instead)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/srec_connect

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (optional)
CORS_ORIGIN=http://localhost:5000

# Session Configuration (if using sessions)
SESSION_SECRET=your-session-secret-key

# Email Configuration (for future email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@srec.ac.in
EMAIL_PASS=your-email-password

# File Upload Configuration (for future file upload features)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5000000

# Rate Limiting (for future API rate limiting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (for future caching/sessions)
REDIS_URL=redis://localhost:6379

# OAuth Configuration (for future social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Push Notifications (for future mobile notifications)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@srec.ac.in

# Development/Testing
DEBUG=true
MOCK_DATA=false

# Production Configuration
TRUST_PROXY=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Monitoring (for future monitoring integration)
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# College Specific Configuration
COLLEGE_DOMAIN=srec.ac.in
COLLEGE_NAME="Sri Ramakrishna Engineering College"
ADMIN_EMAIL=admin@srec.ac.in

# Feature Flags (for gradual feature rollout)
ENABLE_CHATBOT=false
ENABLE_CALENDAR_VIEW=true
ENABLE_FILE_UPLOADS=false
ENABLE_PUSH_NOTIFICATIONS=false
